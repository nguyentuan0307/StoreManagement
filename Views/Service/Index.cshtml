@model List<ServiceView>
@{
    ViewData["Title"] = "Devices Page";
    List<ServiceView> sevices = Model;
}
@using ComputerRepair.DTO;
@using ComputerRepair.Models;
<div class="text-center">
    <h1 class="display-4">Welcome Device Page</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>SeviceId</th>
                <th>SeviceName</th>
                <th>Description</th>
                <th>
                    <a class="btn btn-primary" asp-action="Add" asp-controller="Service">Add</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sevice in sevices)
            {
                <tr>
                    <td>@sevice.ServiceID</td>
                    <td>@sevice.ServiceName</td>
                    <td>@sevice.Description</td>
                    <td>
                        <a class="btn btn-success" asp-action="Update" asp-controller="Service" asp-route-id="@sevice.ServiceID">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Service" asp-route-id="@sevice.ServiceID" onclick="return confirm('Bạn có chắc muốn xóa dịch vụ  @sevice.ServiceName không?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

